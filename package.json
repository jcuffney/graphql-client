{
  "name": "graphql-client",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@apollo/client": "^3.3.5",
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.2",
    "@testing-library/user-event": "^12.5.0",
    "graphql": "^15.4.0",
    "node-sass": "^4.14.1",
    "ramda": "^0.27.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "4.0.1",
    "web-vitals": "^0.2.4"
  },
  "scripts": {
    "init:hard": "rm -rf node_modules && npm install",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "verify": "npm run lint && npm run cover",
    "test": "react-scripts test",
    "cover": "react-scripts test --coverage --reporters=jest-junit --watchAll=false",
    "eject": "react-scripts eject",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint --fix src/**/*.js"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "eslint": "^7.15.0",
    "eslint-config-airbnb": "^18.2.1",
    "jest-junit": "^12.0.0"
  },
  "jest-junit": {
    "outputDirectory": "./coverage"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "statements": 0,
        "branches": 0,
        "lines": 0,
        "functions": 0
      }
    }
  }
}
